<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="item_video_title"
            type="String" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:elevation="4dp"
        android:background="@drawable/drwable_main_color"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:layout_height="58dp">




    <TextView
        android:textSize="@dimen/hv_dimen_text_title_a"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/video_lab"
        tools:text="2015-05-23"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


        <ImageView
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_record_search"
            android:id="@+id/video_search"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="25dp"
            android:layout_height="25dp" />


        <ImageView
            android:layout_marginRight="15dp"
            android:src="@drawable/drawable_record_upload"
            android:id="@+id/video_upload"
            app:layout_constraintRight_toLeftOf="@+id/video_search"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="25dp"
            android:layout_height="25dp" />


        <ImageView
            android:visibility="visible"
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_download"
            android:id="@+id/video_down"
            app:layout_constraintRight_toLeftOf="@+id/video_upload"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="25dp"
            android:layout_height="25dp" />


        <ImageView
            android:visibility="visible"
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_sort"
            android:id="@+id/video_sort"
            app:layout_constraintRight_toLeftOf="@+id/video_down"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <ImageView
            android:visibility="visible"
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_record_refresh"
            android:id="@+id/video_refresh"
            app:layout_constraintRight_toLeftOf="@+id/video_sort"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="25dp"
            android:layout_height="25dp" />

    </android.support.constraint.ConstraintLayout>
</layout>
