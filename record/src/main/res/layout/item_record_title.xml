<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="item_record_title"
            type="String" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:background="@color/color_base"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:layout_height="@dimen/dimens_base_title_clip">




    <TextView
        android:text="视频(100/345)"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/tv_lab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_add"
            android:layout_marginRight="15dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/icon_record_add"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <ImageView
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_record_search"
            android:id="@+id/tv_search"
            app:layout_constraintRight_toLeftOf="@+id/iv_add"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_record_refresh"
            android:id="@+id/tv_refresh"
            app:layout_constraintRight_toLeftOf="@+id/tv_search"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:visibility="gone"
            android:layout_marginRight="15dp"
            android:src="@drawable/drawable_record_upload"
            android:id="@+id/tv_upload"
            app:layout_constraintRight_toLeftOf="@+id/tv_refresh"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </android.support.constraint.ConstraintLayout>
</layout>
