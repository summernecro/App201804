<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="act_main"
            type="String" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:background="@color/white"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


<com.android.lib.view.bottommenu.BottomMenuView
    android:background="@color/white"
    android:id="@+id/bottommenu"
    android:elevation="4dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_width="match_parent"
    android:layout_height="48dp"/>



        <android.support.constraint.ConstraintLayout
            android:orientation="vertical"
            android:text="contain_video"
            android:id="@+id/contain_video"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bottommenu"
            android:layout_width="0dp"
            android:layout_height="0dp">
            <include
                android:id="@+id/videotitle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                layout="@layout/item_video_title"/>

            <RelativeLayout
                android:id="@+id/video"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/videotitle"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
            <android.support.v7.widget.RecyclerView
                android:visibility="gone"
                android:id="@+id/videosortlist"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/videotitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:orientation="vertical"
            android:text="contain_image"
            android:id="@+id/contain_image"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bottommenu"
            android:layout_width="0dp"
            android:layout_height="0dp">
            <include
                android:id="@+id/imagetitle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                layout="@layout/item_image_title"/>

            <RelativeLayout
                android:id="@+id/image"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imagetitle"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
            <android.support.v7.widget.RecyclerView
                android:visibility="gone"
                android:id="@+id/imagesortlist"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imagetitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </android.support.constraint.ConstraintLayout>
        <LinearLayout
            android:orientation="vertical"
            android:text="contain_text"
            android:id="@+id/contain_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bottommenu"
            android:layout_width="0dp"
            android:layout_height="0dp">
            <include
                android:id="@+id/texttitle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                layout="@layout/item_text_title"/>
            <RelativeLayout
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <ImageView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bottommenu"
            android:layout_width="match_parent"
            android:background="@drawable/actionbar_shadow_up"
            android:layout_height="wrap_content"/>

    </android.support.constraint.ConstraintLayout>
</layout>
