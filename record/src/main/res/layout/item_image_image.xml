<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="item_image_image"
            type="com.summer.record.data.Record" />
    </data>

    <com.summer.record.ui.view.GridConstraintLayout
        android:elevation="4dp"
        android:background="@color/white"
        android:id="@+id/bg"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="90dp">


        <ImageView
            android:background="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="1dp"
            android:id="@+id/iv_video"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <ImageView
            android:src="@drawable/icon_record_noupload"
            app:layout_constraintRight_toRightOf="@+id/iv_video"
            app:layout_constraintTop_toTopOf="@+id/iv_video"
            android:layout_width="15dp"
            android:layout_height="15dp" />

    </com.summer.record.ui.view.GridConstraintLayout>
</layout>
